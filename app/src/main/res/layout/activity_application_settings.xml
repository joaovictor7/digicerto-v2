<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".ui.settings.ApplicationSettingsActivity">

    <TextView
        android:id="@+id/text_operation_type"
        style="@style/Theme.DIGIcerto.LabelSettings"
        android:text="@string/text_operation_type"
        app:layout_constraintBottom_toTopOf="@+id/radio_operation_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radio_operation_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_operation_type">

        <RadioButton
            android:id="@+id/radio_FTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:text="@string/text_FTP" />

        <RadioButton
            android:id="@+id/radio_WS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:text="@string/text_web_service" />

    </RadioGroup>

    <View
        android:id="@+id/view_separator"
        style="@style/Theme.DIGIcerto.ViewSeparator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radio_operation_type" />

</androidx.constraintlayout.widget.ConstraintLayout>