<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DIGIcerto" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brown_500</item>
        <item name="colorPrimaryVariant">@color/brown_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/Theme.DIGIcerto.BottomSheet</item>
        <item name="switchStyle">@style/Theme.DIGIcerto.Switch</item>
    </style>

    <style name="Theme.DIGIcerto.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DIGIcerto.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- BottomSheet -->
    <style name="Theme.DIGIcerto.BottomSheet" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Theme.DIGIcerto.BottomSheetModal</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="Theme.DIGIcerto.BottomSheetModal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet</item>
    </style>

    <!-- No Action Bar -->
    <style name="Theme.DIGIcerto.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Border Text -->
    <style name="Theme.DIGIcerto.BorderText">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:shadowColor">#FFFFFF</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">7</item>
    </style>

    <!-- TextInput/TextInputEditText -->
    <style name="Theme.DIGIcerto.TextInputOutline" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/brown_700</item>
        <item name="errorEnabled">true</item>
        <item name="boxStrokeColor">@color/brown_700</item>
    </style>

    <style name="Theme.DIGIcerto.TextInputFilled" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="errorEnabled">true</item>
        <item name="background">@android:color/transparent</item>
    </style>

    <!-- TextView Label Settings -->
    <style name="Theme.DIGIcerto.LabelSettings" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Theme.DIGIcerto.MandatoryLabelSettings" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:visibility">invisible</item>
        <item name="android:textColor">#ff0000</item>
        <item name="android:text">@string/text_mandatory</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Theme.DIGIcerto.HelpLabelSettings" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- View Separator -->
    <style name="Theme.DIGIcerto.ViewSeparator">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:background">@color/grey_300</item>
    </style>

    <!-- Switch -->
    <style name="Theme.DIGIcerto.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:textColor">#757575</item>
    </style>

    <!-- Card View -->
    <style name="Theme.DIGIcerto.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:checkable">true</item>
        <item name="cornerRadius">@dimen/radius_default</item>
        <item name="cardElevation">6dp</item>
    </style>

</resources>